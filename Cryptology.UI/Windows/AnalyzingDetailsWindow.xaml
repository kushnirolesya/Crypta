<Window x:Class="Cryptology.UI.AnalyzingDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cryptology.UI"
        mc:Ignorable="d"
        Title="Analyzing details" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListView Grid.Column="0" ItemsSource="{Binding AnalyzingDetails.TextLettersCount}">
        </ListView>

        <ListView Grid.Column="1" ItemsSource="{Binding AnalyzingDetails.CryptoLettersCount}">
        </ListView>
    </Grid>
</Window>
